	<bean id="writer" class="edu.hiro.converter.batch.FmHcvPatientItemWriter">
		<property name="entityManagerFactory" ref="entityManagerFactory" />
	</bean>
		
	<job id="loadPatients" xmlns="http://www.springframework.org/schema/batch">
		<step id="readWritePatients">
			<tasklet transaction-manager="transactionManager">
				<chunk reader="reader" writer="writer" commit-interval="100" skip-limit="1000000">
					<skippable-exception-classes>
						<include class="java.lang.Exception" />
						<include class="org.springframework.batch.item.file.FlatFileParseException" />						
					</skippable-exception-classes>
				</chunk>
			</tasklet>
		</step>
	</job>
